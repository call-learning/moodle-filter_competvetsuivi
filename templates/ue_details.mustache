{{!
    @template filter_competvetsuivi/ue_details

    UE details with course header and progress

    Example context (json):
    {
        "detailurl": "http://example.com/details",
        "progresshtml": "<div>Progress content</div>",
        "coursedata": {
            "fullname": "Course name",
            "courseimage": "http://example.com/image.jpg"
        },
        "headerdata": [
            {
                "class": "highlighted-top",
                "icon": "ects",
                "title": "ECTS",
                "value": "6"
            }
        ]
    }
}}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-4 local-envasyllabus-course-syllabus">
            <div class="local-envasyllabus-course-syllabus-header d-flex mb-5 row no-gutters">
                <div class="ml-lg-2">
                    <table class="table table-borderless syllabus-data mb-0">
                        {{#headerdata}}
                            <tr class="{{class}}">
                                <td class="data-label">{{#icon}}{{#pix}}{{.}}, local_envasyllabus, {{title}}{{/pix}}{{/icon}}{{title}}</td>
                                <td class="data-value">{{value}}</td>
                            </tr>
                        {{/headerdata}}
                    </table>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5 d-flex flex-column align-items-end">
            <div class="w-100 mb-3">
                {{{progresshtml}}}
            </div>
            <a href="{{{detailurl}}}" class="btn btn-primary">
                {{#str}}viewsyllabus, filter_competvetsuivi{{/str}}
            </a>
        </div>
    </div>
</div>
